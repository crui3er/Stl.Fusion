<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;netcoreapp3.1;netstandard2.1;net471</TargetFrameworks>
    <PackageTags>servicetitan stl stl_fusion</PackageTags>
    <Description>Stl.Net - a set of helpers related to networking.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.WebSockets" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net471' ">
    <PackageReference Include="IndexRange" VersionOverride="1.0.*" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" VersionOverride="5.0.0" />
    <PackageReference Include="System.Memory" VersionOverride="4.5.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Stl\Stl.csproj" />
  </ItemGroup>

</Project>
